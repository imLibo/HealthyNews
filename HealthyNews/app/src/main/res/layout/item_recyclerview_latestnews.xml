<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/backgroundColor"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/textview_item_latestnews_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="国家税务局关于完善纳税信用管理有关事项的公告"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/textview_item_latestnews_time"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年1月1日"
            />
        <ImageView
            android:id="@+id/imageview_item_latestnews_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/textview_item_latestnews_digest"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="根据国家税务局关于完善纳税信用管理有关事项的公告国家税务局关于完善纳税信用管理有关事项的公告国家税务局关于完善纳税信用管理有关事项的公告国家税务局关于完善纳税信用管理有关事项的公告国家税务局关于完善纳税信用管理有关事项的公告国家税务局关于完善纳税信用管理有关事项的公告国家税务局关于完善纳税信用管理有关事项的公告"
            />
    </LinearLayout>


</android.support.v7.widget.CardView>