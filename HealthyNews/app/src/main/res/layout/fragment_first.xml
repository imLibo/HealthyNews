<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xieyao.healthynews.fragment.FirstFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_firstfragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:background="?attr/colorPrimary"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/material_white"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/material_white"
        app:tabTextColor="@color/material_grey_300"/>

    <include layout="@layout/layout_loadingview"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_firstfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
</LinearLayout>
